<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="incident-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :title %>
    <%= textarea f, :title %>
    <%= error_tag f, :title %>

    <%= hidden_input f, :user_id %>
    <%= hidden_input f, :complaint_id %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
